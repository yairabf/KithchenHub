# Environment
NODE_ENV=development
PORT=3000

# Database
# For local development without Docker, use localhost:
# DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/kitchen_hub?schema=public"
# DIRECT_URL="postgresql://USER:PASSWORD@localhost:5432/kitchen_hub?schema=public"
# For Docker Compose, use postgres service hostname (see .env.docker-compose.example)
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public"
DIRECT_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public"

# Auth
JWT_SECRET=change-me-to-32+chars-minimum-length-required
JWT_REFRESH_SECRET=change-me-to-32+chars-minimum-length-required
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Storage (S3 / MinIO) â€“ used for recipe image uploads when STORAGE_PROVIDER is not "supabase"
# Default bucket is "household-uploads" if STORAGE_BUCKET is unset (e.g. local MinIO)
# STORAGE_PROVIDER=minio
# STORAGE_BUCKET=household-uploads
# S3_REGION=us-east-1
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin

# Recipe Images
RECIPE_IMAGE_SIGNED_URL_TTL_SECONDS=604800
RECIPE_IMAGE_UPLOADS_PER_HOUR=60
RECIPE_IMAGE_UPLOAD_BURST=10

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Email Configuration (optional, for email verification)
# If not configured, verification emails will be logged to console
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@kitchenhub.app
# EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=24
