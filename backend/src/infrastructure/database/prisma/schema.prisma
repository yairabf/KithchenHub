generator client {
  provider = "prisma-client-js"
  // Cloud Run and our Docker build use Debian (node:*-slim); include both for compatibility.
  // Include both targets so the runtime can select the correct query engine.
  //
  // - builder image (Alpine): linux-musl-openssl-3.0.x
  // - runtime image (Debian slim): debian-openssl-3.0.x
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Household {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  users         User[]
  shoppingLists ShoppingList[]
  recipes       Recipe[]
  chores        Chore[]
  customItems   CustomItem[]

  @@map("households")
}

model User {
  id                          String    @id @db.Uuid
  email                       String?   @unique
  googleId                    String?   @unique @map("google_id")
  passwordHash                String?   @map("password_hash")
  emailVerified               Boolean   @default(false) @map("email_verified")
  emailVerificationToken      String?   @map("email_verification_token")
  emailVerificationTokenExpiry DateTime? @map("email_verification_token_expiry")
  name                        String?
  avatarUrl                   String?   @map("avatar_url")
  role                        String    @default("Member") // Admin, Member, Kid
  isGuest                     Boolean   @default(false) @map("is_guest")
  deviceId                    String?   @map("device_id")
  householdId                 String?   @map("household_id")
  createdAt                   DateTime  @default(now()) @map("created_at")
  updatedAt                   DateTime  @updatedAt @map("updated_at")

  household           Household?            @relation(fields: [householdId], references: [id], onDelete: SetNull)
  refreshTokens       RefreshToken[]
  assignedChores      Chore[]              @relation("ChoreAssignee")
  importBatches        ImportBatch[]
  importMappings      ImportMapping[]
  syncIdempotencyKeys SyncIdempotencyKey[]

  @@index([householdId])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id") @db.Uuid
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model ShoppingList {
  id          String    @id @default(cuid())
  householdId String    @map("household_id")
  name        String
  color       String?
  icon        String?
  isMain      Boolean   @default(false) @map("is_main")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  household Household      @relation(fields: [householdId], references: [id], onDelete: Cascade)
  items     ShoppingItem[]

  @@index([householdId, name])
  @@index([householdId, isMain])
  @@map("shopping_lists")
}

model ShoppingItem {
  id            String    @id @default(cuid())
  listId        String    @map("list_id")
  catalogItemId String?   @map("catalog_item_id")
  customItemId  String?   @map("custom_item_id")
  name          String
  quantity      Float     @default(1)
  unit          String?
  isChecked     Boolean   @default(false) @map("is_checked")
  category      String?
  image         String?   @map("image")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  list        ShoppingList         @relation(fields: [listId], references: [id], onDelete: Cascade)
  catalogItem MasterGroceryCatalog? @relation(fields: [catalogItemId], references: [id], onDelete: SetNull)
  customItem  CustomItem?          @relation(fields: [customItemId], references: [id], onDelete: SetNull)

  @@index([listId])
  @@index([listId, isChecked])
  @@index([catalogItemId])
  @@index([customItemId])
  @@map("shopping_items")
}

model MasterGroceryCatalog {
  id              String   @id
  name            String
  category        String
  defaultUnit     String?  @map("default_unit")
  imageUrl        String?  @map("image_url")
  defaultQuantity Int?     @map("default_quantity")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  shoppingItems ShoppingItem[]

  @@index([name])
  @@index([category])
  @@map("master_grocery_catalog")
}

model CustomItem {
  id          String   @id @default(cuid())
  householdId String   @map("household_id")
  name        String
  category    String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  household     Household      @relation(fields: [householdId], references: [id], onDelete: Cascade)
  shoppingItems ShoppingItem[]

  @@index([householdId, name])
  @@index([householdId])
  @@map("custom_items")
}

model Recipe {
  id           String    @id @default(cuid())
  householdId  String    @map("household_id")
  title        String
  category     String?
  prepTime     Int?      @map("prep_time") // in minutes
  cookTime     Int?      @map("cook_time") // in minutes
  ingredients  Json      // JSONB array of ingredients
  instructions Json      // JSONB array of instruction steps
  imageUrl     String?   @map("image_url")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId, title])
  @@map("recipes")
}

model Chore {
  id          String    @id @default(cuid())
  householdId String    @map("household_id")
  assigneeId  String?   @map("assignee_id") @db.Uuid
  title       String
  dueDate     DateTime? @map("due_date")
  isCompleted Boolean   @default(false) @map("is_completed")
  completedAt DateTime? @map("completed_at")
  repeat      String?   // daily, weekly, monthly, etc.
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  assignee  User?     @relation("ChoreAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  @@map("chores")
}

model ImportBatch {
  id          String    @id @default(cuid())
  userId      String    @map("user_id") @db.Uuid
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  status      String    @default("PENDING") // PENDING, MAPPING, PROCESSING, COMPLETED, FAILED
  filename    String?
  source      String // e.g. "GUEST_MODE_MIGRATION"
  startedAt   DateTime  @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")
  error       String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  mappings ImportMapping[]

  @@index([userId])
  @@map("import_batches")
}

model ImportMapping {
  id          String      @id @default(cuid())
  batchId     String      @map("batch_id")
  batch       ImportBatch @relation(fields: [batchId], references: [id], onDelete: Cascade)
  userId      String      @map("user_id") @db.Uuid
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceField String      @map("source_field")
  sourceType  String      @map("source_type") // e.g., 'RECIPE', 'SHOPPING_LIST' to prevent ID collisions
  targetField String      @map("target_field")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  // Unique constraints for idempotency:
  // - [batchId, sourceField, sourceType]: Ensures one mapping per batch per source entity (prevents duplicates within a single import)
  // - [userId, sourceField, sourceType]: Ensures idempotency across batches (prevents duplicates in concurrent requests)
  // Both constraints create indexes automatically for efficient lookups in findMappingsForUser queries
  @@unique([batchId, sourceField, sourceType])
  @@unique([userId, sourceField, sourceType])
  @@map("import_mappings")
}

model SyncIdempotencyKey {
  id          String    @id @default(cuid())
  userId      String    @map("user_id") @db.Uuid
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  key         String    // The operationId (idempotency key)
  entityType  String    @map("entity_type") // 'recipe' | 'shoppingList' | 'shoppingItem' | 'chore'
  entityId    String    @map("entity_id") // The entity ID that was processed
  requestId   String?   @map("request_id") // Optional request ID for observability
  status      String    @default("PENDING") // PENDING | COMPLETED | FAILED
  processedAt DateTime? @map("processed_at") // Set when status becomes COMPLETED
  createdAt   DateTime  @default(now()) @map("created_at")

  // Unique constraint ensures idempotency: same user + same operationId = already processed
  @@unique([userId, key])
  @@index([userId, entityType, entityId])
  @@index([processedAt]) // For retention cleanup
  @@map("sync_idempotency_keys")
}
